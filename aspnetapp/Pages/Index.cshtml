@page
@model IndexModel
@{
    ViewData["Title"] = "AspNetApp";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2><i class="fas fa-home"></i> 欢迎来到 AspNetApp</h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-rocket fa-5x text-primary mb-3"></i>
                        <h4>基于 .NET 6 的现代Web应用</h4>
                        <p class="text-muted">包含用户认证、API接口、Swagger文档等完整功能</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a href="/login" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-sign-in-alt"></i> 用户登录
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a href="/register" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-user-plus"></i> 用户注册
                            </a>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="/swagger" target="_blank" class="btn btn-outline-info btn-lg w-100">
                                <i class="fas fa-book"></i><br>
                                <small>API 文档</small>
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <button class="btn btn-outline-secondary btn-lg w-100" onclick="checkAuthStatus()">
                                <i class="fas fa-shield-alt"></i><br>
                                <small>检查登录状态</small>
                            </button>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="mailto:dev@example.com" class="btn btn-outline-warning btn-lg w-100">
                                <i class="fas fa-envelope"></i><br>
                                <small>联系我们</small>
                            </a>
                        </div>
                    </div>
                    
                    <div class="mt-4 p-3 bg-light rounded">
                        <h6 class="text-muted">技术栈</h6>
                        <span class="badge bg-primary me-2">ASP.NET Core 6.0</span>
                        <span class="badge bg-success me-2">MySQL</span>
                        <span class="badge bg-warning me-2">JWT Authentication</span>
                        <span class="badge bg-info me-2">Swagger/OpenAPI</span>
                        <span class="badge bg-secondary">Entity Framework</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function checkAuthStatus() {
        const token = localStorage.getItem('authToken');
        if (token) {
            if (confirm('您已登录！是否跳转到仪表板？')) {
                window.location.href = '/dashboard';
            }
        } else {
            alert('您尚未登录，请先登录后再试。');
        }
    }
    
    // 页面加载时检查登录状态
    window.addEventListener('load', function() {
        const token = localStorage.getItem('authToken');
        if (token) {
            // 如果已登录，显示提示
            const loginBtn = document.querySelector('a[href="/login"]');
            if (loginBtn) {
                loginBtn.innerHTML = '<i class="fas fa-tachometer-alt"></i> 进入仪表板';
                loginBtn.href = '/dashboard';
            }
        }
    });
</script>
